@using Ecommerce.Models;
@using X.PagedList.Web.Common
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Product>

@{ ViewData["Title"] = "Home Page"; }

<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
<div class="col-4">
    <div class="card mb-4 align-items-center">
                <div class="card-header d-flex align-items-center justify-content-center text-center col-md-12" style="font-size: 1rem;color: steelblue; height: 100px;flex:unset">
                    <b>@product.Name</b>
        </div>
        <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height: 300px;" />
                <div class="card-header col-md-12">
            <div class="row justify-content-lg-between align-items-center">
                <div class="col-md-6" style="font-size: 1rem;color: #a51313">
                   Price : @product.Price
                </div>
                <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-light pull-right btn-outline-info col-md-6">Details</a>
            </div>
        </div>
    </div>
</div>}
</div>
<div>
    @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c),PagedListRenderOptions.PageNumbersOnly)
</div>


