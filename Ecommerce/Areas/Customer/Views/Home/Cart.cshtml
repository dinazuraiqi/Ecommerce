@using Ecommerce.Models
@model List<Product>
@{ ViewData["Title"] = "Cart"; }

<h1>Your Cart</h1>

<br />
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Product Type</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        <img src="~/@item.Image" width="200px" height="150px" />
    </td>
    <td>@item.Name</td>
    <td><input id="qty" type="text" value="1" style="text-align:center" oninput="calculatePrice()" /></td>
    <td id="price">@item.Price</td>
    <td>@item.ProductType.Type</td>
    <td>@item.ProductColor</td>
    <td>
        <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
        </a>
    </td>
</tr>}
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to Home</a>
    </div>
    <div class="col-6 text-right">
        <h3>Total Amount</h3>
        <h3>Grant Total : @Model.Sum(c => c.Price) </h3>
        <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-info">Process to Checkout</a>
    </div>
</div>

<script>
    function calculatePrice() {
        var qty = document.getElementById("qty").value
        var price = document.getElementById("price").value
        var result = qty * price
        document.getElementById("price").innerHTML = result
    }
    
</script>

